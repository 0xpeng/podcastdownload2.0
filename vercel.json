{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/transcribe.js": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/download.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  }
} 